SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
MY_USER_ID=U-your-user-id
SLACK_APP_TOKEN=xapp-your-app-token  # Optional - for socket mode (local dev)

