# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token # Optional: for socket mode

# User Configuration
MY_USER_ID=U12345678 # Your Slack user ID

# Server Configuration
PORT=3000
NODE_ENV=development

# AI Configuration
# At least one AI provider must be configured for AI features to work
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-your-anthropic-key

# AI Model Configuration (optional)
OPENAI_MODEL=gpt-4.1
ANTHROPIC_MODEL=claude-3-opus-20240229

# AI Behavior Configuration (optional)
AI_PERSONALITY=casual # Options: professional, casual, playful
AI_USE_EMOJIS=false
AI_MAX_RESPONSE_LENGTH=300 # Target response length in words (can extend to 1000 when needed)

# Logging
LOG_LEVEL=info

# Web Search Configuration (optional - for NBA stats lookup)
# To enable web search, get API credentials from https://developers.google.com/custom-search/v1/overview
GOOGLE_API_KEY=your-google-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id